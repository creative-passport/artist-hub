{
  "$id": "https://schema.creativepassport.net/defs.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Object": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "ObjectWithId": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    "Link": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "href": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "href"
      ]
    },
    "Actor": {
      "$ref": "#/definitions/ObjectWithId"
    },
    "Attachment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "mediaType": {
          "type": "string"
        },
        "blurhash": {
          "type": "string"
        },
        "icon": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "url"
              ]
            }
          ]
        }
      },
      "required": [
        "mediaType",
        "type",
        "url"
      ]
    },
    "Note": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "Note"
        },
        "url": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "attachment": {
          "anyOf": [
            {
              "$ref": "#/definitions/Attachment"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Attachment"
              }
            }
          ]
        }
      },
      "required": [
        "id",
        "type"
      ]
    },
    "Activity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "actor": {
          "anyOf": [
            {
              "$ref": "#/definitions/Actor"
            },
            {
              "type": "string"
            }
          ]
        },
        "object": {
          "anyOf": [
            {
              "$ref": "#/definitions/ObjectWithId"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "required": [
        "actor",
        "type"
      ]
    }
  }
}